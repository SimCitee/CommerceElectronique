                        <th><?php echo e(Lang::get('actions.actions')); ?></th>
                    </tr>
                    </thead>
                    <tbody>
                    <?php foreach($users as $user): ?>
                        <tr id="user_<?php echo e($user->id); ?>_row">
                            <td>
